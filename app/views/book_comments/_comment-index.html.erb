<% book.book_comments.each do |book_comment| %>
  <%= link_to user_path(book_comment.user.id) do %>
    <%= image_tag book_comment.user.get_profile_image, size:'100x100' %>
  <% end %>
  <%= book_comment.comment %>
  <% if book_comment.user == current_user %>
    <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger", remote: true %>
  <% end %><br>
  <%= link_to book_comment.user.name, user_path(book_comment.user.id) %><br>
<% end %>