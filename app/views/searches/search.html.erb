<h1><%= @range %> search for "<%= @word %>"</h1>


<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <tr>
        <th>User name</th>
        <th>User introduction</th>
        <th colspan="3"></th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
          <td><%= link_to 'Show', user_path(user.id) %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <tr>
        <th>User image</th>
        <th>Title</th>
        <th>opinion</th>
        <th colspan="2"></th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to  user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image, size: '50x50' %> <% end %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>